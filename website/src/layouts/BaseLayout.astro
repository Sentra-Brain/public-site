---
// src/layouts/BaseLayout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title = "Your Data. Your Rules. Your AI.", lang = "en" } = Astro.props;
---

<html lang={lang}>
  <head>
    <!-- Standard Meta -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Sentra Brain – Private AI Server for Enterprises. Deploy AI on your servers in under an hour. Book a pilot demo for your EU business."
    />

    <!-- Open Graph (Facebook, LinkedIn, WhatsApp, Slack) -->
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Sentra Brain – Private AI Server for Enterprises"
    />
    <meta
      property="og:description"
      content="Deploy private AI on your servers. EU pilot program available. Zero data leaves your network."
    />
    <meta
      property="og:image"
      content="https://sentrabrain.com/sentra_brain.png"
    />
    <meta property="og:url" content="https://sentrabrain.com/" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Sentra Brain – Private AI Server for Enterprises"
    />
    <meta
      name="twitter:description"
      content="Deploy private AI on your servers. EU pilot program available. Zero data leaves your network."
    />
    <meta
      name="twitter:image"
      content="https://sentrabrain.com/sentra_brain.png"
    />
    <title>{`Sentra Brain - ${title}`}</title>

    <!-- Canonical -->
    <link rel="canonical" href={`https://sentrabrain.com/${lang}/`} />

    <!-- Language -->
    <meta name="language" content={`${lang}`} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Theme color (browser UI) -->
    <meta name="theme-color" content="#0f172a" />
    <link rel="icon" href="/favicon.svg"  type="image/svg+xml" />
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <Header lang={lang} />
    <main class="flex-1 px-4 sm:px-6 lg:px-8 py-12">
      <div class="max-w-3xl mx-auto">
        <slot />
      </div>
    </main>
    <Footer lang={lang} />
  </body>
</html>
