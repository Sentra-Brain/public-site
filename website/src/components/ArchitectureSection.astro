---
import { t, defaultLocale, type Locale } from '../i18n.ts';
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---

<section class="py-16 text-[var(--sentra-text)]">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl md:text-5xl font-bold text-center mb-8">
      {t(locale, 'architecture.hero.title')}
    </h1>

    <p class="max-w-2xl mx-auto text-center text-lg mb-12">
      {t(locale, 'architecture.hero.subtitle')}
    </p>

    <div class="mb-8 bg-slate-800/40 border border-slate-600 p-4 rounded-xl text-[var(--sentra-text)]">
      <strong>{t(locale, "architecture.callout.title")}</strong>
      <p>{t(locale, "architecture.callout.text")}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- LLM Engine - Blue -->
      <div class="bg-blue-50/90 border border-blue-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-blue-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.llm.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.llm.title')}</h3>
          <p>{t(locale, 'architecture.blocks.llm.text')}</p>
        </div>
      </div>

      <!-- MCP Integration - Green -->
      <div class="bg-green-50/90 border border-green-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-green-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.mcp.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.mcp.title')}</h3>
          <p>{t(locale, 'architecture.blocks.mcp.text')}</p>
        </div>
      </div>

      <!-- RAG Document Search - Purple -->
      <div class="bg-purple-50/90 border border-purple-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-purple-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.rag.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.rag.title')}</h3>
          <p>{t(locale, 'architecture.blocks.rag.text')}</p>
        </div>
      </div>

      <!-- Automation - Orange -->
      <div class="bg-orange-50/90 border border-orange-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-orange-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.automation.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.automation.title')}</h3>
          <p>{t(locale, 'architecture.blocks.automation.text')}</p>
        </div>
      </div>

      <!-- Security - Red -->
      <div class="bg-red-50/90 border border-red-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-red-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.security.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.security.title')}</h3>
          <p>{t(locale, 'architecture.blocks.security.text')}</p>
        </div>
      </div>

      <!-- Hardware - Grey/Silver -->
      <div class="bg-slate-50/90 border border-slate-200 p-6 rounded-xl text-slate-900 relative">
        <div class="absolute top-4 left-4 bg-slate-100 p-2 rounded text-2xl">{t(locale, 'architecture.blocks.support.icon')}</div>
        <div class="pt-12">
          <h3 class="text-xl font-semibold mb-3">{t(locale, 'architecture.blocks.support.title')}</h3>
          <p>{t(locale, 'architecture.blocks.support.text')}</p>
        </div>
      </div>
    </div>
  </div>
</section>