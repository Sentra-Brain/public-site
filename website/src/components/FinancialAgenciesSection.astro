---
import { t, defaultLocale, type Locale } from "../i18n.ts";
import FeatureBox from "./FeatureBox.astro";
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---
<section class="py-12 text-[var(--sentra-text)]">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold mb-4 flex items-center">
      {t(locale, "use_cases.sectors.financial-agencies.icon")} {t(locale, "use_cases.sectors.financial-agencies.title")}
    </h2>
    <p class="mb-8 text-lg">{t(locale, "use_cases.sectors.financial-agencies.text")}</p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        Object.entries(t(locale, "financial_agencies.features")).map(([key, feature]) => (
          <FeatureBox
            key={key}
            icon={feature.icon}
            title={feature.title}
            desc={feature.text}
          />
        ))
      }
    </div>
  </div>
</section>
