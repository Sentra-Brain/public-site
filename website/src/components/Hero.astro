---
import { t, defaultLocale, type Locale } from "../i18n.ts";
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---

<section
  class="hero-section shadow-sentra bg-[var(--sentra-primary)] text-[var(--sentra-text)] py-24 rounded-2xl border-2 border-[var(--sentra-accent-light)] p-8 md:p-16 transition-all duration-300 hover:border-[var(--sentra-accent)]"
>
  <div class="container mx-auto px-4 text-center flex flex-col items-center">
    <h1
      class="text-3xl md:text-5xl font-bold mb-4 leading-tight opacity-0 fade-down delay-0"
    >
      {t(locale, "hero.title_top")}
    </h1>

    <img
      src="/sentra_brain_logo_256.png"
      alt="Sentra Brain Logo"
      class="w-32 md:w-48 mb-6 opacity-0 zoom-fade delay-1"
      loading="lazy"
    />

    <h1
      class="text-5xl md:text-7xl font-extrabold mb-6 leading-tight tracking-tight opacity-0 fade-up delay-2"
    >
      {t(locale, "hero.title_bottom")}
    </h1>

    <p
      class="text-lg md:text-xl max-w-2xl mx-auto mb-8 opacity-0 fade-up delay-3"
    >
      {t(locale, "hero.subtitle2") !== "hero.subtitle2" ? t(locale, "hero.subtitle2") : t(locale, "hero.subtitle")}
    </p>

    <a
      href={`/${lang}/pilot`}
      class="inline-block px-8 py-4 bg-[var(--sentra-accent)] text-[var(--sentra-primary)] font-semibold rounded-lg hover:bg-[var(--sentra-accent-light)] transition opacity-0 fade-up delay-4"
    >
      {t(locale, "hero.cta2") !== "hero.cta2" ? t(locale, "hero.cta2") : t(locale, "hero.cta")}
    </a>
  </div>
</section>
