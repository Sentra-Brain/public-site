---
import { t, defaultLocale, type Locale } from "../i18n.ts";
import FeatureBox from "./FeatureBox.astro";
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---

<section class="py-16 text-[var(--sentra-text)]">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl md:text-5xl font-bold text-center mb-8">
      {t(locale, "use_cases.hero.title")}
    </h1>

    <p class="max-w-2xl mx-auto text-center text-lg mb-12">
      {t(locale, "use_cases.hero.subtitle")}
    </p>

    <div class="grid md:grid-cols-3 gap-8">
      {
        Object.entries(t(locale, "use_cases.sectors")).map(([key, sector]) => {
          const href = key === 'accounting' ? `/${lang}/verticals/accounting` : `/${lang}/for-${key}`;
          return (
            <a
              href={href}
              class="block transition-transform hover:scale-[1.02]"
              key={key}
            >
              <FeatureBox
                icon={sector.icon}
                title={sector.title}
                desc={sector.text}
              />
            </a>
          );
        })
      }
    </div>

    <div class="text-center mt-16">
      <a
        href={`/${lang}/pilot`}
        class="inline-block px-8 py-4 text-lg rounded-xl font-semibold bg-[var(--sentra-accent)] text-[var(--sentra-primary)] hover:bg-[var(--sentra-accent-light)] transition"
      >
        {t(locale, "about.cta")}
      </a>
    </div>
  </div>
</section>
