---
import { t, defaultLocale, type Locale } from '../i18n.ts';
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---

<section class="py-16 text-[var(--sentra-text)]">
  <div class="container mx-auto px-4 text-center max-w-2xl">

    <h1 class="text-3xl md:text-5xl font-bold mb-6">
      {t(locale, 'contact.hero.title')}
    </h1>

    <p class="text-lg mb-8">
      {t(locale, 'contact.hero.subtitle')}
    </p>

    <div class="bg-[var(--sentra-neutral)] p-6 rounded-xl text-[var(--sentra-primary)] shadow-md border border-[var(--sentra-accent-light)]">

      <div class="grid md:grid-cols-2 gap-4 mb-6">
        <!-- Email Button -->
        <a 
          href={t(locale, 'contact.email.href')} 
          class="flex items-center justify-center gap-2 px-6 py-3 bg-[var(--sentra-accent)] text-[var(--sentra-primary)] rounded-lg hover:bg-[var(--sentra-accent-light)] transition font-semibold"
        >
          <span>ðŸ“§</span>
          {t(locale, 'contact.email.button')}
        </a>

        <!-- WhatsApp Button -->
        <a 
          href={t(locale, 'contact.whatsapp.href')} 
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center gap-2 px-6 py-3 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-semibold"
        >
          <span>ðŸ’¬</span>
          {t(locale, 'contact.whatsapp.button')} {t(locale, 'contact.whatsapp.number')}
        </a>
      </div>

      <p class="text-sm text-[var(--sentra-text-muted)] mb-4">
        {t(locale, 'contact.response_time')}
      </p>

      <div class="border-t border-[var(--sentra-accent-light)] pt-4">
        <p class="mb-2">{t(locale, 'contact.formText')}</p>
        <a href="https://jgcarmona.com/contact" target="_blank" class="btn-secondary">
          {t(locale, 'contact.formButton')}
        </a>
      </div>

    </div>

  </div>
</section>
