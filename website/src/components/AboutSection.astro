---
import { t, defaultLocale, type Locale } from "../i18n.ts";
const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---

<section class="py-16 text-[var(--sentra-text)]">
  <div class="container mx-auto px-4">
    <h1 class="text-3xl md:text-5xl font-bold text-center mb-8">
      {t(locale, "about.hero.title")}
    </h1>

    <p class="max-w-2xl mx-auto text-center text-lg mb-12">
      {t(locale, "about.hero.subtitle")}
    </p>

    <!-- Three Pillars -->
    <div class="grid md:grid-cols-3 gap-8 mb-16 text-center">
      <div class="bg-[var(--sentra-neutral)] p-6 rounded-xl text-[var(--sentra-primary)] border border-[var(--sentra-accent-light)]">
        <div class="text-3xl mb-3">{t(locale, "about.pillars.pillar1.icon")}</div>
        <h3 class="text-xl font-semibold mb-2">
          {t(locale, "about.pillars.pillar1.title")}
        </h3>
        <p>{t(locale, "about.pillars.pillar1.text")}</p>
      </div>
      <div class="bg-[var(--sentra-neutral)] p-6 rounded-xl text-[var(--sentra-primary)] border border-[var(--sentra-accent-light)]">
        <div class="text-3xl mb-3">{t(locale, "about.pillars.pillar2.icon")}</div>
        <h3 class="text-xl font-semibold mb-2">
          {t(locale, "about.pillars.pillar2.title")}
        </h3>
        <p>{t(locale, "about.pillars.pillar2.text")}</p>
      </div>
      <div class="bg-[var(--sentra-neutral)] p-6 rounded-xl text-[var(--sentra-primary)] border border-[var(--sentra-accent-light)]">
        <div class="text-3xl mb-3">{t(locale, "about.pillars.pillar3.icon")}</div>
        <h3 class="text-xl font-semibold mb-2">
          {t(locale, "about.pillars.pillar3.title")}
        </h3>
        <p>{t(locale, "about.pillars.pillar3.text")}</p>
      </div>
    </div>

    <!-- Why Now Strip -->
    <div class="bg-gradient-to-r from-[var(--sentra-accent)] to-[var(--sentra-accent-light)] p-6 rounded-xl text-[var(--sentra-primary)] text-center mb-16">
      <h3 class="text-xl font-semibold mb-3">{locale === 'en' ? 'Why now?' : '¿Por qué ahora?'}</h3>
      <p>{t(locale, "about.why_now.text")}</p>
    </div>

    <!-- CTA -->
    <div class="text-center mb-8">
      <a
        href={`/${lang}/contact`}
        class="inline-block px-8 py-4 text-lg rounded-xl font-semibold bg-[var(--sentra-accent)] text-[var(--sentra-primary)] hover:bg-[var(--sentra-accent-light)] transition"
      >
        {t(locale, "about.cta")}
      </a>
    </div>

    <!-- Sentra Motto -->
    <div class="text-center text-2xl font-bold text-[var(--sentra-accent)]">
      {t(locale, "about.motto")}
    </div>
  </div>
</section>
