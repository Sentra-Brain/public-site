---
import { t, defaultLocale, type Locale } from '../i18n.ts';

const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
const path = Astro.url.pathname;
const pathSuffix = path.replace(/^\/(en|es)(\/|$)/, '');
---

<header class="w-full bg-[var(--sentra-primary)] text-[var(--sentra-text)] shadow-sm sticky top-0 z-50 border-b border-[var(--sentra-accent-light)]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">    
    <div class="flex justify-between h-16 items-center">
      <!-- Left: Logo + Title -->
      <div class="flex items-center space-x-2">
        <a href={`/${lang}/`} class="flex items-center space-x-2">
          <img src="/sentra_brain_logo_256.png" alt="Sentra Brain Logo" class="h-8 w-auto" />
          <span class="text-lg font-semibold hover:text-sentra-accent transition">
            Sentra Brain
          </span>
        </a>
      </div>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button
          type="button"
          id="menu-toggle"
          class="text-sentra-text hover:text-sentra-accent focus:outline-none"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center space-x-6 text-sm">
        <a href={`/${lang}/about`} class="hover:text-sentra-accent">{t(locale, 'nav.about')}</a>
        <a href={`/${lang}/architecture`} class="hover:text-sentra-accent">{t(locale, 'nav.architecture')}</a>
        <a href={`/${lang}/security`} class="hover:text-sentra-accent">{t(locale, 'nav.security')}</a>
        <a href={`/${lang}/use-cases`} class="hover:text-sentra-accent">{t(locale, 'nav.use_cases')}</a>
        <a href={`/${lang}/pilot`} class="hover:text-sentra-accent">{t(locale, 'nav.pilot')}</a>
        <a href={`/${lang}/contact`} class="hover:text-sentra-accent">{t(locale, 'nav.contact')}</a>

        <div class="pl-2 border-l border-sentra-accent-light">
          <a href={`/en/${pathSuffix}`} class={lang === 'en' ? 'font-bold underline' : 'hover:underline'}>EN</a> |
          <a href={`/es/${pathSuffix}`} class={lang === 'es' ? 'font-bold underline' : 'hover:underline'}>ES</a>
        </div>
      </nav>
    </div>

    <!-- Mobile Nav -->
    <div id="mobile-nav" class="md:hidden hidden pt-4 pb-4 space-y-3 text-sm">
      <a href={`/${lang}/about`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.about')}</a>
      <a href={`/${lang}/architecture`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.architecture')}</a>
      <a href={`/${lang}/security`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.security')}</a>
      <a href={`/${lang}/use-cases`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.use_cases')}</a>
      <a href={`/${lang}/pilot`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.pilot')}</a>
      <a href={`/${lang}/contact`} class="block px-2 hover:text-sentra-accent">{t(locale, 'nav.contact')}</a>

      <div class="px-2">
        <a href={`/en/${pathSuffix}`} class={lang === 'en' ? 'font-bold underline' : 'hover:underline'}>EN</a> |
        <a href={`/es/${pathSuffix}`} class={lang === 'es' ? 'font-bold underline' : 'hover:underline'}>ES</a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const toggleButton = document.getElementById('menu-toggle');
    const mobileNav = document.getElementById('mobile-nav');

    if (toggleButton && mobileNav) {
      toggleButton.addEventListener('click', () => {
        mobileNav.classList.toggle('hidden');
      });
    }
  });
</script>
