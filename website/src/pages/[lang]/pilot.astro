---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getLocalizedPaths } from "../../utils/localization.ts";
import { t, defaultLocale, type Locale } from "../../i18n.ts";
export const getStaticPaths = getLocalizedPaths;

const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
---
<BaseLayout lang={locale} title={t(locale, "pilot.hero.title")}>
  <section class="py-12 text-[var(--sentra-text)]">
    <div class="container mx-auto px-4 max-w-3xl">
      <h1 class="text-3xl md:text-5xl font-bold mb-6">{t(locale, "pilot.hero.title")}</h1>
      <p class="text-lg mb-8">{t(locale, "pilot.hero.subtitle")}</p>

      <div class="grid gap-6 md:grid-cols-2">
        <div class="bg-[var(--sentra-neutral)] text-[var(--sentra-primary)] p-6 rounded-xl border border-[var(--sentra-accent-light)]">
          <h2 class="text-xl font-semibold mb-3">{t(locale, "pilot.includes.title")}</h2>
          <ul class="list-disc ml-5 space-y-2">
            <li>{t(locale, "pilot.includes.deploy")}</li>
            <li>{t(locale, "pilot.includes.integrations")}</li>
            <li>{t(locale, "pilot.includes.automations")}</li>
            <li>{t(locale, "pilot.includes.security")}</li>
          </ul>
        </div>
        <div class="bg-[var(--sentra-neutral)] text-[var(--sentra-primary)] p-6 rounded-xl border border-[var(--sentra-accent-light)]">
          <h2 class="text-xl font-semibold mb-3">{t(locale, "pilot.ideal.title")}</h2>
          <ul class="list-disc ml-5 space-y-2">
            <li>{t(locale, "pilot.ideal.legal")}</li>
            <li>{t(locale, "pilot.ideal.finance")}</li>
            <li>{t(locale, "pilot.ideal.accounting")}</li>
            <li>{t(locale, "pilot.ideal.ops")}</li>
          </ul>
        </div>
      </div>

      <div class="mt-8 bg-[var(--sentra-neutral)] text-[var(--sentra-primary)] p-6 rounded-xl border border-[var(--sentra-accent-light)]">
        <h2 class="text-xl font-semibold mb-3">{t(locale, "pilot.success.title")}</h2>
        <ul class="list-disc ml-5 space-y-2">
          <li>{t(locale, "pilot.success.kpis")}</li>
          <li>{t(locale, "pilot.success.security")}</li>
          <li>{t(locale, "pilot.success.training")}</li>
        </ul>
      </div>

      <div class="text-center mt-10">
        <a href={`/${lang}/contact`} class="inline-block px-8 py-4 rounded-xl font-semibold bg-[var(--sentra-accent)] text-[var(--sentra-primary)] hover:bg-[var(--sentra-accent-light)] transition">
          {t(locale, "pilot.cta")}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>