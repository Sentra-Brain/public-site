---
import { getLocalizedPaths } from "../../utils/localization.ts";
import { t, defaultLocale, type Locale } from "../../i18n.ts";
import BaseLayout from "../../layouts/BaseLayout.astro";

export const getStaticPaths = getLocalizedPaths;

const lang = Astro.params.lang ?? defaultLocale;
const locale = lang as Locale;
import UseCasesSection from "../../components/UseCasesSection.astro";
---

<BaseLayout lang={locale} title={t(locale, "use_cases.hero.title")}>
  <UseCasesSection lang={locale} />  
</BaseLayout>
